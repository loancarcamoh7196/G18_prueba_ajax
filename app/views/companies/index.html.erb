<div class="container">
    <div class="row">
        <h1 class="col-12">Empresa </h1>
        
        <div class="card col-12">
            <div class="card-body">
                    <h5 class="card-title">Agregar nueva Empresa</h5>
                    <%= render 'form', company: @company %>
                </div>
            </div>
        </div>

        <br>


        <div class="col-12">
            <table  class="table table-fullwidth table-hover">
                <thead>
                    <th>Nombre</th>
                    <th>Rol tributario</th>
                    <th>Industria</th>
                    <th colspan="3"></th>
                </thead>
                <tbody id="lista">
                    <%= render @companies %>
                </tbody>
            </table>            
        </div>
    </div>
</div>

<%= render 'modal' %>